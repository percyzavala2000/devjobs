<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
     <h3>Informacion general</h3>

       <div class="campo">
           <label for="titulo">Titulo</label>
           <input type="text" name="titulo" placeholder="Ej. react deloveper" >
       </div>
    <div class="campo">
        <label for="empresa">Empresa</label>
        <input type="text" name="empresa" placeholder="Empresa" >
    </div>
    <div class="campo">
        <label for="ubicacion">Ubicacion</label>
        <input type="text" name="ubicacion" placeholder="Ubicacion" >
    </div>
    <div class="campo">
        <label for="salario">Salario</label>
        <input type="text" name="salario" placeholder="Salario" >
    </div>
    <div class="campo">
        <label for="contrato">Contrato</label>
        <select name="contrato" >
            <option value="" disabled selected>-- Selecciona --</option>
            <option value="Freelance"Freelance></option>
            <option value="Tiempo Completo">Tiempo Completo</option>
            <option value="Medio Tiempo">Medio Tiempo</option>
            <option value="Por Proyecto">Por Proyecto</option>
        </select>
    </div>
    <h3>Descripcion del puesto</h3>

    <div class="campo descripcion">
        <label for="descripcion">Descripcion</label>
        <input id="x" type="hidden" name="descripcion">
        <trix-editor input="x"></trix-editor>
    </div>
    <h3>Conociemientos</h3>

    <ul class="lista-conocimientos">
        {{#seleccionarSkills a}}

        {{/seleccionarSkills}}

    </ul>
    <div class="campo centrar-horizontal">
        <input type="hidden" name="skills" id="skills">
        <input type="submit" value="Publicar" class=" btn btn-azul">

    </div>

    </form>
     
</main>